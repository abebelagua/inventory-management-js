{
    "compilerOptions": {
        /**
         * Specify the root directory of input files.
         */
        "rootDir": "./src",
        /**
         * Specify an output folder for all emitted files.
         */
        "outDir": "./lib",
        "removeComments": false,
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        ".eslintrc.*"
    ]
}