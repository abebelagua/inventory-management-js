{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@abc/typescript-config/configs/tsconfig.base.json",
    "compilerOptions": {
        /**
         * Specify the root directory of input files.
         */
        "rootDir": "./src",
        /**
         * Specify an output folder for all emitted files.
         */
        "outDir": "./lib",
        /**
         * Generate .d.ts files from TypeScript and JavaScript files in your
         * project.
         */
        "declaration": true,
        /**
         * Create source map files for emitted Typescript files.
         */
        "declarationMap": true,
        /**
         * Create source map files for emitted Javascript files.
         */
        "sourceMap": true,
        /**
         * Disable emitting comments.
         */
        "removeComments": false,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        ".turbo",
    ]
}