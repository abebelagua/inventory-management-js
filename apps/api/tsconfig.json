{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@abc/typescript-config/configs/tsconfig.nest.json",
    "compilerOptions": {
        /**
         * Specify the root directory of input files.
         */
        "rootDir": "./src",
        /**
         * Specify an output folder for all emitted files.
         */
        "outDir": "./dist",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".turbo",
        "test",
        "**/*spec.ts"
    ]
}